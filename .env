# CareBridge AI Development Environment Configuration
# For development testing - will use SQLite database by default

# Django Settings
SECRET_KEY=django-insecure-carebridge-ai-development-key-for-testing-only
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
# Using SQLite for development testing
# If you want to test PostgreSQL, uncomment and configure the following:
# DB_NAME=carebridge_ai
# DB_USER=carebridge_user  
# DB_PASSWORD=carebridge_pass
# DB_HOST=localhost
# DB_PORT=5432

# Redis Configuration
REDIS_URL=redis://127.0.0.1:6379/1

# Celery Configuration
CELERY_BROKER_URL=redis://127.0.0.1:6379/0
CELERY_RESULT_BACKEND=redis://127.0.0.1:6379/0

# AI Service Configuration
AI_SERVICE=keyword
AI_CONFIDENCE_THRESHOLD=0.7
HUMAN_HANDOVER_THRESHOLD=0.3

# Message Channels Enable/Disable
ENABLE_KAKAO=True
ENABLE_WECHAT=False
ENABLE_LINE=False
ENABLE_SMS=False
ENABLE_PHONE=False

# Cache Settings
TRANSLATION_CACHE_TTL=3600
LANGUAGE_DETECTION_CACHE_TTL=86400
AI_RESPONSE_CACHE_TTL=1800

# Notifications
STAFF_NOTIFICATION_EMAIL=staff@clinic.ai

# Metrics and Analytics
ENABLE_METRICS=True
METRICS_RETENTION_DAYS=90